#!/bin/bash

# export DJANGO_SETTINGS_MODULE=app.settings

if [ -d "$VIRTUAL_ENV/src" ]; then
  cd $VIRTUAL_ENV/src
else
  mkdir -p $VIRTUAL_ENV/src
  cd $VIRTUAL_ENV/src
  add2virtualenv .
  touch .envrc
  direnv allow
fi

