# Slate confuration
# -------------------------------------------------------------------
config defaultToCurrentScreen true
config keyboardLayout "qwerty"
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBeforeRepeat 0.4
config secondsBetweenRepeat 0.1


# create a HYPER key shortcut
# -------------------------------------------------------------------
alias hyper ctrl;alt;cmd


# Monitor Aliases
# -------------------------------------------------------------------
alias monitor-imac              1920x1200
alias monitor-macbook           1680x1050
alias monitor-monoprice-home    2560x1440
alias monitor-monoprice-work    2560x1600
alias monitor-portrait          1200x1920


# Slate Features
# -------------------------------------------------------------------
config windowHintsIgnoreHiddenWindows false
config windowHintsShowIcons true
config windowHintsSpread true
bind h:cmd;shift hint ASDFHJKLQWERTYUIOPCVBNG

# Reload slate configuration file
bind s:${hyper} relaunch

# Mimic SizeUp
source .slate.sizeup

# Mimic Divvy / setup gird layout
bind space:cmd;shift grid padding:5 ${monitor-monoprice-work}:6,6 ${monitor-macbook}:6,2 ${monitor-portrait}:2,6 ${monitor-monoprice-home}:6,2 ${monitor-imac}:6,2


# Application Aliases and Bindings
# -------------------------------------------------------------------

alias browser 'Google Chrome'
alias editor 'Sublime Text 2'
alias hipchat 'HipChat'
alias irc 'Textual'
alias terminal 'iTerm'

# Application focus
bind y:${hyper} focus ${editor}
bind i:${hyper} focus ${terminal}
bind g:${hyper} focus ${browser}


# Monitor Position Aliases
# -------------------------------------------------------------------

# Laptop monitor
alias macbook-full move screenOriginX;screenOriginY screenSizeX;screenSizeY ${monitor-macbook}
alias macbook-left-half move screenOriginX;screenOriginY screenSizeX/2;screenSizeY ${monitor-macbook}
alias macbook-right-half move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY ${monitor-macbook}
alias macbook-left-third move screenOriginX;screenOriginY screenSizeX/3;screenSizeY ${monitor-macbook}
alias macbook-right-two-thirds move screenOriginX+screenSizeX/3;screenOriginY 2*screenSizeX/3;screenSizeY ${monitor-macbook}
alias macbook-top-half move screenOriginX;screenOriginY screenSizeX;screenSizeY/2 ${monitor-macbook}
alias macbook-bottom-half move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2 ${monitor-macbook}

# Work monitor
alias monoprice-work-full move screenOriginX;screenOriginY screenSizeX;screenSizeY ${monitor-monoprice-work}
alias monoprice-work-left-half move screenOriginX;screenOriginY screenSizeX/2;screenSizeY ${monitor-monoprice-work}
alias monoprice-work-right-half move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY ${monitor-monoprice-work}
alias monoprice-work-left-third move screenOriginX;screenOriginY screenSizeX/3;screenSizeY ${monitor-monoprice-work}
alias monoprice-work-right-two-thirds move screenOriginX+screenSizeX/3;screenOriginY 2*screenSizeX/3;screenSizeY ${monitor-monoprice-work}
alias monoprice-work-top-half move screenOriginX;screenOriginY screenSizeX;screenSizeY/2 ${monitor-monoprice-work}
alias monoprice-work-bottom-half move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2 ${monitor-monoprice-work}

# Portrait monitor
alias portrait-topthird move screenOriginX;screenOriginY screenSizeX;(screenSizeY/3) ${monitor-portrait}
alias portrait-middlethird move screenOriginX;(screenOriginY+screenSizeY/3) screenSizeX;screenSizeY/3 ${monitor-portrait}
alias portrait-bottomthird move screenOriginX;(screenOriginY+(screenSizeY/3)*2) screenSizeX;screenSizeY/3 ${monitor-portrait}


# Two monitor layout (work)
# -------------------------------------------------------------------

layout two-monitors-work ${editor}:MAIN_FIRST ${monoprice-work-left-half}
layout two-monitors-work ${terminal}:MAIN_FIRST ${macbook-full}
layout two-monitors-work ${browser}:REPEAT ${monoprice-work-right-half}

# Bind a key to trigger this layout
bind 8:${hyper} layout two-monitors-work

# Trigger this layout automatically when 2 monitors are present
default two-monitors-work resolutions:${monitor-macbook};${monitor-monoprice-work}


# One monitor layout (laptop)
# -------------------------------------------------------------------

layout one-monitor ${editor}:MAIN_FIRST ${macbook-left-half}
layout one-monitor ${terminal}:MAIN_FIRST ${macbook-right-half}
layout one-monitor ${browser}:REPEAT ${macbook-full}

# Bind a key to trigger this layout
bind 7:${hyper} layout one-monitor

# Trigger this layout automatically when 1 monitors are present
default one-monitor resolutions:${monitor-macbook}


# One monitor (portrait mode)
# -------------------------------------------------------------------

layout one-monitor-portrait ${hipchat}:MAIN_FIRST     ${portrait-topthird}
layout one-monitor-portrait ${irc}:MAIN_FIRST         ${portrait-middlethird}
layout one-monitor-portrait ${terminal}:MAIN_FIRST    ${portrait-bottomthird}

# Bind a key to trigger this layout
bind 9:${hyper} layout one-monitor-portrait

# Trigger this layout automatically when 1 monitor in portrait is present
default one-monitor-portrait resolutions:${monitor-portrait}
