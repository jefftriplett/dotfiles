
PATH="/usr/local/bin:/usr/local/sbin:${PATH}"

## to fix geos not working with postgis
export LD_LIBRARY_PATH="/usr/local/lib"

export CFLAGS="-I$(xcrun --show-sdk-path)/usr/include"
export CPPFLAGS="-I/usr/local/opt/readline/include"
export LDFLAGS="-L/usr/local/opt/readline/lib"

## node
PATH="${PATH}:/usr/local/share/npm/bin"

if [[ -e ${HOME}/bin ]] ; then
  PATH="${HOME}/bin:${PATH}"
fi

# default terminal editor
export EDITOR="nano"

# Put Homebrew in "no touching" mode
export HOMEBREW_NO_ANALYTICS=1

# Homebrew security via: https://github.com/drduh/macOS-Security-and-Privacy-Guide
# export HOMEBREW_CASK_OPTS=--require-sha  # currently broken in brew cask
export HOMEBREW_NO_INSECURE_REDIRECT=1

## i7 gcc / 4.2.1 hack - to fix some odd install errors... ala http://stackoverflow.com/questions/5366882/installing-pil-on-os-x-snow-leopard-w-xcode4-no-ppc-support
export ARCHFLAGS="-Wno-error=unused-command-line-argument-hard-error-in-future"

# Prefer US English and UTF-8
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

## history
export HISTCONTROL="ignoredups"
export HISTSIZE=50000000
export HISTFILESIZE=$HISTSIZE
export HISTIGNORE=" *:ls:cd:cd ~:date:exit:export:history:pwd:* --help"

## pip settings
export PIP_DOWNLOAD_CACHE="/tmp/.pip/download_cache"
export PIP_REQUIRE_VIRTUALENV="true"
export PIP_RESPECT_VIRTUALENV="true"
# export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python

## python settings
export PYTHONDONTWRITEBYTECODE=1

## pyenv settings
export PYENV_ROOT="${HOME}/.pyenv"
export PYENV_VIRTUALENVWRAPPER_PREFER_PYVENV="true"
PATH="${PYENV_ROOT}/bin:${PATH}"

# ruby settings
PATH="$(brew --prefix ruby)/bin:${PATH}"
PATH="/usr/local/node_modules/.bin:${PATH}"
PATH="~/.local/bin:${PATH}"

# rbenv settings
export RBENV_ROOT="/usr/local/var/rbenv"

# arcanist settings
export DEV_HOME="${HOME}/dev/arcanist/bin"
PATH="${DEV_HOME}:${PATH}"

# Heroku Toolbelt settings
PATH="/usr/local/heroku/bin:${PATH}"

export PATH
