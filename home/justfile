# Kill all Chrome tabs to improve performance, decrease battery usage, and save memory.
@kill-tabs:
    npx kill-tabs

@timemachine:
    # PSA: https://apple.stackexchange.com/questions/382772/time-machine-in-the-cleaning-up-state-forever
    sudo sysctl debug.lowpri_throttle_enabled=0
    # once done
    # sudo sysctl debug.lowpri_throttle_enabled=1

@topalias:
    topalias

@update-readme-docs:
    cd "$HOME/.homesick/repos/dotfiles" && pipx run --spec cogapp cog -Pr ./README.md

# ----------------------------------------------------------------
# VS Code
# ----------------------------------------------------------------

@_vs_code-freeze:
    code --list-extensions > vs-code-extensions.txt

# ----------------------------------------------------------------
# Xcode
# ----------------------------------------------------------------

@_xcode-bootstrap:
    sudo xcode-select --install

@xcode-upgrade:
    sudo rm -rf /Library/Developer/CommandLineTools
    just _xcode-bootstrap
