@_default:
    just --list

build:
    #!/usr/bin/env bash

    if [ ! -f logo.png ]; then \
        just logo; \
    fi

    nativefier \
        --darwin-dark-mode-support \
        --icon logo.png \
        --lang "en-US" \
        --name "Toggl" \
        --quiet \
        https://www.toggl.com/app \
        build

    rsync \
        --archive \
        --delete-after \
        --quiet \
        build/Toggl-darwin-*/Toggl.app/ \
        ~/Applications/Toggl.app

@clean:
    rm -rf build

@fmt:
    just --fmt --unstable

@logo:
    wget \
        --quiet \
        --output-document=logo.png \
        https://logo.clearbit.com/www.toggl.com

@upgrade:
    nativefier \
        --quiet \
        --upgrade \
        build/Toggl-darwin-*/Toggl.app/

    rsync \
        --archive \
        --delete-after \
        --quiet \
        build/Toggl-darwin-*/Toggl.app/ \
        ~/Applications/Toggl.app
